trigger ServiceLineItemsTrigger on Service_Line_Items__c (before insert, before update, after insert, after update, after delete, after undelete) {

    if (Trigger.isBefore && (Trigger.isInsert || Trigger.isUpdate)) {
        // Call the handleBeforeInsertUpdate method
        ServiceLineItemsHandler.handleBeforeInsertUpdate(Trigger.new, Trigger.oldMap);
    }

    if (Trigger.isAfter && (Trigger.isInsert || Trigger.isUpdate || Trigger.isDelete || Trigger.isUndelete)) {
        // Call the handleAfterChange method
        ServiceLineItemsHandler.handleAfterChange(Trigger.newMap, Trigger.oldMap);
    }
}
